<Window x:Class="TcpReceiver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TcpReceiver"
        mc:Ignorable="d"
        Title="TCP Screen Receiver" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Rectangle Fill="Black"></Rectangle>
        <Image x:Name="receivedImage"/>
        <Label x:Name="connectionInfo" Content="no__client__connected"  HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White" Width="118" FontStyle="Normal" BorderBrush="Black"/>
    </Grid>
</Window>
